{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES5",
    "jsx": "react",
    /* Modules */
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node", "web-vitals"],
    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/config/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}